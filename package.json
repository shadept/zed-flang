{
  "name": "tree-sitter-flang",
  "version": "0.1.0",
  "description": "Tree-sitter grammar for FLang",
  "main": "bindings/node",
  "types": "bindings/node",
  "keywords": [
    "tree-sitter",
    "parser",
    "flang"
  ],
  "files": [
    "grammar.js",
    "binding.gyp",
    "prebuilds/**",
    "bindings/node/*",
    "queries/*",
    "src/**",
    "*.wasm"
  ],
  "dependencies": {
    "node-addon-api": "^8.2.2",
    "node-gyp-build": "^4.8.4"
  },
  "devDependencies": {
    "eslint": "^9.15.0",
    "eslint-config-treesitter": "^1.0.2",
    "tree-sitter-cli": "^0.24.4"
  },
  "scripts": {
    "generate": "tree-sitter generate",
    "build": "tree-sitter generate && tree-sitter build",
    "test": "tree-sitter test",
    "lint": "eslint grammar.js",
    "start": "tree-sitter build --wasm && tree-sitter playground"
  },
  "tree-sitter": [
    {
      "scope": "source.flang",
      "file-types": [
        "f"
      ],
      "highlights": "queries/highlights.scm",
      "indents": "queries/indents.scm",
      "injections": "queries/injections.scm"
    }
  ]
}
